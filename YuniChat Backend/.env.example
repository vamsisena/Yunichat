# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yunichat
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# JWT Configuration
JWT_SECRET=your-secret-key-must-be-at-least-256-bits-change-this-in-production
